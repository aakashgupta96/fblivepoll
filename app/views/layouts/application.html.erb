<!DOCTYPE html>
<html>
<head>
  
  <title>Shuriken Live</title>
  <%= stylesheet_link_tag 'application', media: 'all'%>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">  
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <meta name="description" content="A tool for posting customized FB Live videos for polling purpose.">
    <meta name="keywords" content="Fb,facebook,live,streaming,codingninjas,shuriken,shurikenlive">
    <link rel="shortcut-icon" href="favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

</head>


<body>

  <nav>
      <div class="nav-wrapper">
        <a href="/" class="brand-logo" style="margin-left: 5%;">Do Live Poll</a>
        <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
        <ul class="right hide-on-med-and-down">
          <li><a href="#" class="nav-option center-align">Home</a></li>
          <li><a href="#" class="nav-option center-align">FAQS</a></li>
          <% if user_signed_in? %>
          <li><a href="/users/sign_out" class="nav-option waves-effect waves-light btn row relative" data-method="DELETE" style="top: 10px;">Log Out</a></li></li>
          <% else %>
          <li><a href="/users/auth/facebook" class="nav-option waves-effect waves-light btn row" style="top: 10px;"><i class="fa fa-facebook-official col s2 relative" aria-hidden="true" style="font-size: 30px; bottom: 14px; right: 10px;"></i><span class="col s9 relative" style="left: 5px;">Log In</span></a></li>
          <% end %>
        </ul>
        <ul class="side-nav" id="mobile-demo">
          <li><a href="#">Home</a></li>
          <li><a href="#">FAQS</a></li>
          <% if user_signed_in? %>
          <li><a href="/users/sign_out" class="nav-option waves-effect waves-light btn" data-method="DELETE">Log Out</a></li>
          <% else %>
          <li><a href="/users/auth/facebook" class="nav-option waves-effect waves-light btn">Log In with FB</a></li>
          <% end %>
        </ul>
      </div>
  </nav>
  
  <% unless notice.nil? %>
    <div class="notice"><%=notice %></div>
  <% end %>

   <% unless alert.nil? %>
   <div id= "alert" style="display: none;"><%=alert%></div>
   <script >
     var x = document.getElementById("alert").innerHTML
     alert(x)
   </script>
  <% end %>

<%= yield %>

