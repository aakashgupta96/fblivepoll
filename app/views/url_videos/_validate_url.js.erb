$('#video_form').on('submit',function(e){
  jQuery.ajaxSetup({async:false});
  var source_url = $("#post_link_attributes_url").val(); 
  var edit_video = $("#edit_video").prop("checked");
  var move_to_next = true;
  $.get(window.location.origin + "/posts/validate_url", { "source_url": source_url, "edit_video": edit_video}, function(data,success){
    if(data["valid"] == true && data["message"] == "")
    {
      setTimeout(function(){
        $.dialog(
        {
          theme: "supervan",
          boxWidth: width,
          useBootstrap: false,
          title: "Uploading Files !!!",
          content: "Please wait while files are being uploaded. You will be automatically redirected.",
          onOpenBefore: function () {
            $(".jconfirm-closeIcon").hide();
          }
        });
      },1);
    }
    else
    {
      move_to_next = false;
      setTimeout(function(){
        $.alert(
        {
          theme: "supervan",
          boxWidth: width,
          useBootstrap: false,
          title: "Entered Shareable Video URL can't be used!",
          content: data["message"] //"Either there is some mistake in the entered URL or our system does not support the URLS from site that you entered. Please fix the video url and then try again."
        });
      },1);
    }
  });
  return move_to_next;
 });